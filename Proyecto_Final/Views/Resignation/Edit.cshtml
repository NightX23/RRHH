@model Proyecto_Final.ViewModels.ResignationAndEmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Resignation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ResignationObj.Id" />
            <div class="form-group">
                <label asp-for="ResignationObj.EmployeeId" class="control-label"></label>
                <select asp-for="ResignationObj.EmployeeId" class="form-control" 
                    asp-items="@(new SelectList(Model.EmployeeList, "Id", "Id"))">
                </select>
                <span asp-validation-for="ResignationObj.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResignationObj.ResignationType" class="control-label"></label>
                <select asp-for="ResignationObj.ResignationType" class="form-control">
                    <option value="Renuncia">Renuncia</option>
                    <option value="Despido">Despido</option>
                    <option value="Deshaucio">Deshaucio</option>
                </select>
                <span asp-validation-for="ResignationObj.ResignationType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResignationObj.Reason" class="control-label"></label>
                <input asp-for="ResignationObj.Reason" class="form-control" />
                <span asp-validation-for="ResignationObj.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResignationObj.ResignationDate" class="control-label"></label>
                <input asp-for="ResignationObj.ResignationDate" class="form-control" />
                <span asp-validation-for="ResignationObj.ResignationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
