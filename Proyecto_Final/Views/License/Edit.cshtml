@model Proyecto_Final.ViewModels.LicenseAndEmployeeViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>License</h4>
<hr />
<div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LicenseObj.Id" />
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label asp-for="LicenseObj.EmployeeId" class="control-label"></label>
                    <select asp-for="LicenseObj.EmployeeId" class="form-control" multiple
                            asp-items="@(new SelectList(Model.EmployeeList,"Id","Id"))">
                    </select>
                    <span asp-validation-for="LicenseObj.EmployeeId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="form-group">
                    <label asp-for="LicenseObj.StartDate" class="control-label"></label>
                    <input asp-for="LicenseObj.StartDate" class="form-control" />
                    <span asp-validation-for="LicenseObj.StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LicenseObj.EndDate" class="control-label"></label>
                    <input asp-for="LicenseObj.EndDate" class="form-control" />
                    <span asp-validation-for="LicenseObj.EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LicenseObj.Reason" class="control-label"></label>
                    <input asp-for="LicenseObj.Reason" class="form-control" />
                    <span asp-validation-for="LicenseObj.Reason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LicenseObj.Comment" class="control-label"></label>
                    <input asp-for="LicenseObj.Comment" class="form-control" />
                    <span asp-validation-for="LicenseObj.Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>                       
        </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
