@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid col-sm-12">

    <form>
        <div class="row col-sm-12 col-md-5"
             style="border:1px solid gray;margin:10px;padding:5px; border-radius:5px;">
            <h2>Maintenance Module</h2>
            <hr />

            <div class="card col-sm-12 col-md-5"
                 style="border:1px solid gray; padding:5px; border-radius:5px; box-shadow:3px 3px 0px gray; margin: 5px;">
                <div class="card-body">
                    <h3 class="card-title">Operaciones de empleado</h3>
                    <p class="card-text">Acá se encuentran las operaciones relacionadas a los usuarios.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn  btn-primary">Employee Operations</a>
                </div>
            </div>

            <div class="card col-sm-12 col-md-5"
                 style=" border:1px solid gray; padding:5px; border-radius:5px; box-shadow:3px 3px 0px gray;
                    margin:5px;">
                <div class="card-body">
                    <h3 class="card-title">Operaciones de departamentos</h3>
                    <p class="card-text">Acá se encuentran las operaciones relacionadas a los departamentos.</p>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Department Operations</a>
